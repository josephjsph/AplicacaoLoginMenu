<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.icaro.aplicacaologinmenu.CalculatorActivity">

    <TextView
        android:id="@+id/lbl_valor1"
        android:layout_width="351dp"
        android:layout_height="22dp"
        android:text="Valor 1"
        tools:layout_editor_absoluteX="17dp"
        tools:layout_editor_absoluteY="2dp" />

    <EditText
        android:id="@+id/edtValor1"
        android:layout_width="353dp"
        android:layout_height="42dp"
        android:ems="10"
        android:inputType="number"
        tools:layout_editor_absoluteX="16dp"
        android:layout_marginTop="38dp"
        app:layout_constraintTop_toBottomOf="@+id/lbl_valor1" />

    <TextView
        android:id="@+id/lbl_valor2"
        android:layout_width="376dp"
        android:layout_height="19dp"
        android:text="Valor 2"
        tools:layout_editor_absoluteX="16dp"
        android:layout_marginTop="45dp"
        app:layout_constraintTop_toBottomOf="@+id/edtValor1" />

    <EditText
        android:id="@+id/edtValor2"
        android:layout_width="360dp"
        android:layout_height="43dp"
        android:ems="10"
        android:inputType="number"
        tools:layout_editor_absoluteX="12dp"
        android:layout_marginTop="46dp"
        app:layout_constraintTop_toBottomOf="@+id/lbl_valor2" />

    <Button
        android:id="@+id/btnCalcular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calcular"
        tools:layout_editor_absoluteX="16dp"
        android:layout_marginTop="68dp"
        app:layout_constraintTop_toBottomOf="@+id/edtValor2" />

    <TextView
        android:id="@+id/lbl_valor3"
        android:layout_width="88dp"
        android:layout_height="18dp"
        android:text="Resultado: 0"
        tools:layout_editor_absoluteX="16dp"
        android:layout_marginTop="76dp"
        app:layout_constraintTop_toBottomOf="@+id/btnCalcular" />
</android.support.constraint.ConstraintLayout>
